<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="230dp"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_play_info_placeholder_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_ted_play_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium">

        <TextView
            android:id="@+id/tv_play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TED Talks as the seven deadly sins"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_regular_3x"
            android:layout_above="@+id/tv_player_count"
            android:layout_toLeftOf="@+id/iv_playlist_more_vert"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_player_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 talks"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/accent"
            android:layout_above="@+id/tv_play_duration"/>

        <TextView
            android:id="@+id/tv_play_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:12:27"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_regular"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@id/iv_playlist_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:layout_marginLeft="@dimen/margin_medium_2"/>
    </RelativeLayout>
</FrameLayout>